// QR Code API endpoint
const QRCODE_BASE_URL = 'https://api.qrserver.com/v1/create-qr-code/';

module.exports = async (req, res) => {
    // CORS headers
    res.setHeader('Access-Control-Allow-Credentials', true);
    res.setHeader('Access-Control-Allow-Origin', '*');
    res.setHeader('Access-Control-Allow-Methods', 'GET,OPTIONS,POST');
    res.setHeader(
        'Access-Control-Allow-Headers',
        'X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version'
    );

    // Handle OPTIONS request for CORS
    if (req.method === 'OPTIONS') {
        res.status(200).end();
        return;
    }

    // Sadece GET ve POST methodunu kabul et
    if (req.method !== 'GET' && req.method !== 'POST') {
        return res.status(405).json({
            status: 'error',
            message: 'Method not allowed. Use GET or POST.',
            endpoint: '/api/qrcode'
        });
    }

    try {
        let data, size;

        // GET isteği için query parametrelerini al
        if (req.method === 'GET') {
            data = req.query.data;
            size = req.query.size || '150x150';
        }
        // POST isteği için body'den al
        else if (req.method === 'POST') {
            const body = req.body;
            data = body.data;
            size = body.size || '150x150';
        }

        // Validasyon
        if (!data) {
            return res.status(400).json({
                status: 'error',
                message: 'data parametresi zorunludur',
                endpoint: '/api/qrcode',
                method: req.method
            });
        }

        if (data.length > 1000) {
            return res.status(400).json({
                status: 'error',
                message: 'Data çok uzun! Maksimum 1000 karakter.',
                endpoint: '/api/qrcode',
                method: req.method
            });
        }

        // Size validasyonu
        const sizePattern = /^\d+x\d+$/;
        if (!sizePattern.test(size)) {
            return res.status(400).json({
                status: 'error',
                message: 'Geçersiz size formatı. Örnek: 150x150',
                endpoint: '/api/qrcode',
                method: req.method
            });
        }

        // QR Code API URL'ini oluştur
        const qrCodeUrl = `${QRCODE_BASE_URL}?size=${size}&data=${encodeURIComponent(data)}`;

        // Başarılı yanıt
        res.json({
            status: 'success',
            endpoint: '/api/qrcode',
            method: req.method,
            qr_code_url: qrCodeUrl,
            data: data,
            size: size,
            character_count: data.length,
            timestamp: new Date().toISOString(),
            note: 'QR kodu görüntülemek için qr_code_url adresini kullanın'
        });

    } catch (error) {
        console.error('QR Code API error:', error);
        
        res.status(500).json({
            status: 'error',
            message: 'QR Code oluşturulurken hata oluştu',
            endpoint: '/api/qrcode',
            method: req.method,
            timestamp: new Date().toISOString()
        });
    }
};